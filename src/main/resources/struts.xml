<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    <package name="gt" namespace="/" extends="struts-default,json-default">
        <action name="">
            <result>/WEB-INF/Login.jsp</result>
        </action>
        <action name="OA">
            <result>/WEB-INF/office/Welcome.jsp</result>
        </action>
        <action name="login" class="com.runfeng.struts.LoginAction">
            <result name="success">/WEB-INF/office/Welcome.jsp</result>
            <result name="error">/WEB-INF/error.jsp</result>
        </action>
        <action name="*ManageAction" class="com.runfeng.struts.ManageAction"
            method="{1}Manage">
            <result name="{1}Manage">/WEB-INF/office/{1}Manage.jsp</result>
            <result name="error">/WEB-INF/error.jsp</result>
        </action>
        <action name="ExitAction" class="com.runfeng.struts.ManageAction"
                method="ExitAction">
            <result name="ExitAction">/WEB-INF/Login.jsp</result>
            <result name="error">/WEB-INF/error.jsp</result>
        </action>
        <action name="SalaryTableAction" class="com.runfeng.struts.SalaryTableAction">
            <result type="json">
                <param name="noCache">true</param>
                <param name="contentType">text/html</param>
            </result>
        </action>
    </package>
</struts>